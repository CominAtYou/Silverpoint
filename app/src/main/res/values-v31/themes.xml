<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Silverpoint" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/silverpoint_light</item>
        <item name="colorPrimaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silverpoint_light</item>
        <item name="colorSecondaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/system_neutral1_50
        </item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/system_neutral1_50</item>
    </style>
</resources>