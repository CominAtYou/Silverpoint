<resources>
    <!-- Base application theme. -->
    <style name="Theme.Silverpoint" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/silverpoint_light</item>
        <item name="colorPrimaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silverpoint_light</item>
        <item name="colorSecondaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="TextAppearance.AppCompat.InfoTitle">
        <item name="android:textColor">@color/info_title</item>
        <item name="fontFamily">@font/ps_regular</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>