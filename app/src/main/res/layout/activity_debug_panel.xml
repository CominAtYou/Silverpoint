<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DebugPanel">

    <TextView
        android:id="@+id/apiEndpointTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="API Endpoint"
        style="@style/TextAppearance.AppCompat.MaterialSectionHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/endpoint_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/apiEndpointTextView"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radio_prod_endpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Production (discordstatus.com)" />

        <RadioButton
            android:id="@+id/radio_testing_endpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Testing (cdn.cominatyou.com)">
        </RadioButton>

    </RadioGroup>

    <View
        android:id="@+id/separator_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/endpoint_radio_group"
        app:layout_constraintTop_toBottomOf="@id/endpoint_radio_group" />

    <TextView
        android:id="@+id/worker_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.MaterialSectionHeader"
        android:text="Worker"
        app:layout_constraintStart_toStartOf="@id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@id/separator_line"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/last_ran_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Last ran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@id/worker_header" />

    <View
        android:id="@+id/separator_line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/worker_result_field" />

    <TextView
        android:id="@+id/textView_debug"
        style="@style/TextAppearance.AppCompat.MaterialSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Preferences"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toTopOf="@+id/separator_line3" />

    <TextView
        android:id="@+id/latest_incident_id_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Latest incident ID"
        android:textColor="#202124"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView_debug"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/latest_incident_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/latest_incident_id_header"
        tools:text="3bf2c43a" />

    <TextView
        android:id="@+id/latest_incident_update_id_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Latest incident update ID"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/latest_incident_id" />

    <TextView
        android:id="@+id/latest_incident_update_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/latest_incident_update_id_header"
        tools:text="0fcjzks7f" />

    <TextView
        android:id="@+id/apistatus_status_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Volley scope passthrough"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/latest_incident_update_id" />

    <TextView
        android:id="@+id/apistatus_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/apistatus_status_header"
        tools:text="JSONObject" />

    <View
        android:id="@+id/separator_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/endpoint_radio_group"
        app:layout_constraintTop_toBottomOf="@+id/apistatus_status" />

    <TextView
        android:id="@+id/app_info_section_header"
        style="@style/TextAppearance.AppCompat.MaterialSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="App Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@id/separator_line2" />

    <TextView
        android:id="@+id/version_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/app_info_section_header" />

    <TextView
        android:id="@+id/version_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unknown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/version_header"
        tools:text="1.0.0" />

    <TextView
        android:id="@+id/build_timestamp_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Build timestamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/version_field" />

    <TextView
        android:id="@+id/build_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unknown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/build_timestamp_header"
        tools:text="December 21, 2020 8:15 PM CST" />

    <TextView
        android:id="@+id/worker_result_header"
        style="@style/TextAppearance.AppCompat.InfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/last_ran_field" />

    <TextView
        android:id="@+id/worker_result_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/worker_result_header" />

    <TextView
        android:id="@+id/last_ran_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/apiEndpointTextView"
        app:layout_constraintTop_toBottomOf="@+id/last_ran_header" />


</androidx.constraintlayout.widget.ConstraintLayout>