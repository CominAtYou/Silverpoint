<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Silverpoint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/silverpoint_light</item>
        <item name="colorPrimaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silverpoint_light</item>
        <item name="colorSecondaryVariant">@color/silverpoint_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>
    <style name="TextAppearance.AppCompat.InfoTitle">
        <item name="android:textColor">#202124</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.AppCompat.MaterialSectionHeader">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>